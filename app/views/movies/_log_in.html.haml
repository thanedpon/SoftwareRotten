#login
#login
  - if @current_user
    %p.welcome  Welcome, #{@current_user.name}!
    = link_to 'Log Out', logout_path, :method => :post
  - else
    %p.login= link_to 'Log in with your Facebook account', '/auth/facebook'
    %p.login= link_to 'Log in with your twitter account', '/auth/twitter'
    